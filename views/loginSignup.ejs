<html>
    <head> 
		<link rel="stylesheet" text="text/css" href="/css/style.css">
    </head>
    <body>  
        <span><i class="bi bi-list-ul"></i></span>
		<h1 style="padding-top:30px;padding-left:800px;color: aliceblue;">Welcome to MoviesInfo !!</h1>
        <div class="login-wrap">
            <div class="login-html" text-align="left">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Log In</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                <div class="login-form">
                    <form method="GET" action="/loginsubmit">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="user" class="label">Username</label>
                            <input id="user" type="text" class="input" name="Lusername">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Password</label>
                            <input id="pass" type="password" class="input" data-type="password" name="Lpwd">
                        </div>                        
                        <div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span> Keep me Signed in</label>
                        </div>
                        <div class="group">
                            <input type="submit" class="button" value="Log In">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a href="#forgot">Forgot Password?</a>
                        </div>
                    </div>
                </form>
            <form method="GET" action="/signupsubmit">

                    <div class="sign-up-htm">
                        <div class="group">
                            <label for="user" class="label">Username</label>
                            <input id="user" type="text" class="input" name="Susername">
                        </div>

                        <div class="group">
                            <label for="pass" class="label">Password</label>
                            <input id="pass" type="password" class="input" data-type="password" name="Spwd">
                        </div>

                        <div class="group">
                            <label for="pass" class="label">Email Address</label>
                            <input id="pass" type="text" class="input" name="Semail">
                        </div>

                        <div class="group">
                            <input type="submit" class="button" value="Sign Up">
                        </div>
						
                        <div class="hr"></div>

                        <div class="foot-lnk">
                            <label for="tab-1">Already Member?</a>
                        </div>
               
                    </div>
                    </form>
                </div>
                </div>
            </div>
        </div>
</body>
</html>

